extends layout 

block content 
    h1 Author: #{author.name}
    p= author.lifespan
    div(style="margin-left:20pxmargin-top20px")
        h4 Books 

        dl 
            each book in author_books

                dt 
                    a(href=book.url) #{book.title}
                dd #{book.summary}

            else 
                p This autor has no books!
                hr
                p 
                    a.btn.btn-danger(href=author.url+"/delete" role="button") Delete Author
                p
                    a.btn.btn-warning(href=author.url+"/update" role="button") Update Author